{
  "name": "wp-graphql/wp-graphql",
  "description": "GraphQL API for WordPress",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Jason Bahl",
      "email": "jasonbahl@mac.com"
    },
    {
      "name": "Edwin Cromley"
    },
    {
      "name": "Ryan Kanner"
    },
    {
      "name": "Hughie Devore"
    },
    {
      "name": "Chris Zarate"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "webonyx/graphql-php": "14.4.0",
    "ivome/graphql-relay-php": "0.5.0"
  },
  "require-dev": {
    "lucatume/wp-browser": "^2.4",
    "codeception/module-asserts": "^1.0",
    "codeception/util-universalframework": "^1.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "wp-coding-standards/wpcs": "2.3",
    "phpcompatibility/phpcompatibility-wp": "2.1.0",
    "johnpbloch/wordpress": "^5.0",
    "wpackagist-theme/twentytwentyone": "^1.0",
    "composer/installers": "^1.9",
    "squizlabs/php_codesniffer": "3.5.4",
    "phpstan/phpstan": "^0.12.25",
    "szepeviktor/phpstan-wordpress": "^0.7.1",
    "wp-graphql/wp-graphql-testcase": "^1.0",
    "phpunit/phpunit": "<=9.4.4"
  },
  "config": {
    "optimize-autoloader": true,
    "process-timeout": 0
  },
  "autoload": {
    "psr-4": {
      "WPGraphQL\\": "src/"
    }
  },
  "scripts": {
    "install-test-env": "bash bin/install-test-env.sh",
    "docker-build": "docker-compose build",
    "docker-run-app": "docker-compose up --scale testing_db=0 --scale run_tests=0",
    "docker-run-testing-db":"if [ ! \"$(docker ps -a | grep testing_db)\" ]; then docker-compose up -d testing_db; fi",
    "docker-set-main-db": "docker-compose exec testable_app ./setup-database.sh main",
    "docker-set-testing-db": "docker-compose exec testable_app wait-for-it testing_db:3306 --timeout=300 -- ./setup-database.sh testing",
    "docker-run-test": [
      "@docker-run-testing-db",
      "@docker-set-testing-db",
      "docker-compose exec testable_app wait-for-it testing_db:3306 --timeout=300 -- codecept run $FILTER"
    ],
    "docker-run-test-standalone": "docker-compose run --rm run_tests",
    "lint": "vendor/bin/phpcs",
    "phpcs-i": [
      "php ./vendor/bin/phpcs -i"
    ],
    "check-cs": [
      "php ./vendor/bin/phpcs src"
    ],
    "fix-cs": [
      "php ./vendor/bin/phpcbf src"
    ],
    "phpstan": ["phpstan analyze --ansi --memory-limit=1G"]
  },
  "extra": {
    "wordpress-install-dir": "local/public",
    "installer-paths": {
      "local/public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "local/public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "local/public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}
